---
import { getLocaleFromUrl, useTranslations } from "@i18n";

const lang = getLocaleFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="availability">
  <div id="availability-orb" aria-hidden="true"></div>

  {t("availability_cta")}
</div>

<style lang="scss">
  #availability {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    gap: 1rem;
    border-radius: 99px;
    border: 1px solid var(--color-500);
    background-color: var(--color-white);

    #availability-orb {
      height: 0.75rem;
      width: 0.75rem;
      border-radius: 99px;

      background: radial-gradient(
        83.33% 83.33% at 25% 16.67%,
        var(--color-500) 0%,
        #987fff 100%
      );
      box-shadow: 0px 0px 10px 3px #c7dbff;
    }
  }
</style>
