---
import Tronche from "@assets/tronche.webp";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div>
  <img
    {...Tronche}
    height={88}
    width={88}
    alt={t("intro.tronche.alt")}
    draggable="false"
  />
</div>

<style lang="scss">
  div {
    display: block;
    position: relative;
    height: 88px;
    width: 88px;

    img {
      border-radius: 99px;
      border: 1px solid var(--color-500);
    }

    &::after {
      content: "";
      position: absolute;
      background: linear-gradient(180deg, #8036ff 0%, #46befc 100%);
      border: 1px solid var(--color-500);
      width: 100%;
      height: 100%;
      top: 5px;
      left: 5px;
      z-index: -1;
      border-radius: 99px;
    }
  }
</style>
