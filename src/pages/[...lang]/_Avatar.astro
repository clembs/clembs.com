---
import Tronche from "@assets/tronche.webp";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { Image } from "astro:assets";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="tronche">
  <Image
    src={Tronche}
    height={176}
    width={176}
    alt={t("intro.tronche.alt")}
    draggable="false"
    loading="eager"
    fetchpriority="high"
  />
</div>

<style lang="scss">
  #tronche {
    display: block;
    position: relative;
    height: 88px;
    width: 88px;

    img {
      border-radius: 99px;
      border: 1px solid var(--color-500);
    }

    &::after {
      content: "";
      position: absolute;
      background: linear-gradient(180deg, #8036ff 0%, #46befc 100%);
      border: 1px solid var(--color-500);
      width: 100%;
      height: 100%;
      top: 5px;
      left: 5px;
      z-index: -1;
      border-radius: 99px;
    }
  }
</style>
